@page
@model EcartRazorProj.Pages.Categories.IndexModel

<div class="container">
	<div class="row pt-4 pb-3" >
		<div class="col-6">
		<h3 class="text-primary"> View of Category</h3>
		</div>
		<div class="col-6 text-end">
			<a asp-page="/categories/create" class="btn btn-outline-primary">
				<i class="bi bi-plus-square-fill"> Add Category</i>
			</a>
		</div>
	</div>

<table class="table table-bordered table-striped" >
	<thead>
	<tr>
		<th>Category Name</th>
	
		<th>Display Order</th>
	</tr>
	</thead>
		@foreach (var i in Model.CategoryList.OrderBy(u => u.DisplayOrder))
	{
		<tr>
			<td>@i.Name</td>
			<td>@i.DisplayOrder</td>
			<td>
				<div class="w-75 btn-group" role="group">
						<a asp-page="/categories/edit"  asp-route-id="@i.Id" class="btn btn-primary mx-2">
							<i class="bi bi-pencil-square"></i> Edit
					</a>
						<a asp-page="/categories/delete" asp-route-id="@i.Id" class="btn btn-danger mx-2">
							<i class="bi bi-trash3"></i> Delete
						</a>
				</div>
			</td>
		</tr>
	}
</table>
</div>